                                        <tr>
                                            <td width="10"> </td>
                                            <td>
                                                <font size="2" face="Open-sans, sans-serif" color="#555454">

                                                    <p style="margin: 3px 0 7px 0; text-transform: uppercase; font-weight: 500; font-size: 18px; padding-bottom: 10px; border-bottom: 1px solid #D6D4D4;">

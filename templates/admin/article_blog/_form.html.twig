
<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4"><a href="{{ path('app_admin_slider_index') }}">back to list</a></h6>
        {{ form_start(form) }}
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Categorie</label>
            <div class="col-sm-10">
                {{ form_widget(form.Categorie) }}
            </div>
        </div>
        <div class="row mb-3">
            <label for="product_PriceHT" class="col-sm-2 col-form-label">Petite description</label>
            <div class="col-sm-10">
                {{ form_widget(form.Article) }}
            </div> 
        </div>
        <div class="row mb-3">
            <label for="product_TVA" class="col-sm-2 col-form-label">Titre de l'article</label>
            <div class="col-sm-10">
                {{ form_widget(form.Titre) }}
            </div>
        </div>
        <div class="row mb-3">
            <label for="product_TVA" class="col-sm-2 col-form-label">Slug</label>
            <div class="col-sm-10">
                {{ form_widget(form.Slug) }}
            </div>
        </div>
        <div class="row mb-3">
            <label for="product_TVA" class="col-sm-2 col-form-label">Longue description</label>
            <div class="col-sm-10">
                {{ form_widget(form.LongDescription) }}
            </div>
        </div>
        <div class="row mb-3">
            <legend class="col-form-label col-sm-2 pt-0">Activation</legend>
            <div class="col-sm-10">
                <div class="form-check">
                    {{ form_widget(form.IsActive) }}
                    <label class="form-check-label" for="product_IsActive">
                        Cliqué pour activé
                    </label>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <label for="product_TVA" class="col-sm-2 col-form-label">Image</label>
            <div class="col-sm-10">
               {{ form_widget(form.imageFile) }}
            </div>
        </div>

        <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistré') }}</button>
        {{ form_end(form) }}
    </div>
</div>

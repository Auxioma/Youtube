{% extends 'admin.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}

    <div class="container-fluid pt-4 px-4">
        <h1>Liste des forfaits pour les voyants</h1>
        <a href="{{ path('app_admin_tarif_consultation_new') }}">Cr√©ation d'un nouveau prix de consultation</a>
        <div class="bg-light text-center rounded p-4">
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-0">
                    <thead>
                    <tr class="text-dark">
                        <th scope="col">Titre</th>
                        <th scope="col">Mode de consultation</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Activation</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for tarif_consultation in tarif_consultations %}
                        <tr>
                            <td>{{ tarif_consultation.Name }}</td>
                            <td>{{ tarif_consultation.ModeDeConsultation }}</td>
                            <td>{{ tarif_consultation.Price }}</td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" {% if tarif_consultation.IsActive == false %} disabled disabled {% else %} checked disabled {% endif %}>
                                </div>
                            </td>
                            <td>
                                <a href="{{ path('app_admin_tarif_consultation_edit', {'id': tarif_consultation.id}) }}">edit</a>
                            </td>
                            <td>
                                {{ include('admin/tarif_consultation_crud/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>


{% endblock %}
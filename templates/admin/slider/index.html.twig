{% extends 'admin.html.twig' %}

{% block title %}Slider index
{% endblock %}

{% block body %}

	<div class="container-fluid pt-4 px-4">
		<h1>User index</h1>
		<a href="{{ path('app_admin_slider_new') }}">Create new</a>
		<div class="bg-light text-center rounded p-4">
			<div class="table-responsive">
				<table class="table text-start align-middle table-bordered table-hover mb-0">
					<thead>
						<tr class="text-dark">
							<th scope="col">Id</th>
							<th scope="col">Title</th>
							<th scope="col">IsActive</th>
							<th scope="col">UpdatedAt</th>
							<th scope="col">actions</th>
						</tr>
					</thead>
					<tbody>
						{% for slider in sliders %}
							<tr>
								<td>{{ slider.id }}</td>
								<td>{{ slider.Title }}</td>
								<td>
									<div class="form-check form-switch">
										<input class="form-check-input" type="checkbox" role="switch" {% if slider.IsActive == false %} disabled disabled {% else %} checked disabled {% endif %}>

									</div>
								</td>
								<td>{{ slider.UpdatedAt ? slider.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
								<td>
									<a href="{{ path('app_admin_slider_show', {'id': slider.id}) }}">show</a>
									<a href="{{ path('app_admin_slider_edit', {'id': slider.id}) }}">edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}

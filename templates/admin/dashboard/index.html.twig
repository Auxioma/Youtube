{% extends 'admin.html.twig' %}

{% block title %}Hello DashboardController!
{% endblock %}

{% block body %}

	<div class="container-fluid pt-4 px-4">
		<div class="row g-4">
			<div class="col-sm-6 col-xl-3">
				<div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
					<i class="fa fa-chart-line fa-3x text-primary"></i>
					<div class="ms-3">
						<p class="mb-2">Total des vente: {{ 'now' | date('M Y') }}</p>
						<h6 class="mb-0">$1234</h6>
					</div>
				</div>
			</div>
			<div class="col-sm-6 col-xl-3">
				<div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
					<i class="fa fa-chart-bar fa-3x text-primary"></i>
					<div class="ms-3">
						<p class="mb-2">Total Sale</p>
						<h6 class="mb-0">$1234</h6>
					</div>
				</div>
			</div>
			<div class="col-sm-6 col-xl-3">
				<div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
					<i class="fa fa-chart-area fa-3x text-primary"></i>
					<div class="ms-3">
						<p class="mb-2">Today Revenue</p>
						<h6 class="mb-0">$1234</h6>
					</div>
				</div>
			</div>
			<div class="col-sm-6 col-xl-3">
				<div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
					<i class="fa fa-chart-pie fa-3x text-primary"></i>
					<div class="ms-3">
						<p class="mb-2">Total Revenue</p>
						<h6 class="mb-0">$1234</h6>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm-12 col-xl-6">
		<div class="bg-light rounded h-100 p-4">
			<h6 class="mb-4">Visibilité des consultation</h6>
			<div class="form-check form-switch">
				<input class="form-check-input" type="checkbox" role="switch" id="telephone">
				<label class="form-check-label" for="telephone">Active / Desavtive Téléphone</label>
			</div>
			<div class="form-check form-switch">
				<input class="form-check-input" type="checkbox" role="switch" id="Email">
				<label class="form-check-label" for="Email">Active / Desavtive Email </label>
			</div>
			<div class="form-check form-switch">
				<input class="form-check-input" type="checkbox" role="switch" id="tchat">
				<label class="form-check-label" for="tchat">Active / Desavtive Tchat</label>
			</div>
		</div>
	</div>
{% endblock %}

{% block javascript %}
	<script>
		// Fonction qui envoie les données du formulaire au contrôleur Symfony via AJAX
		function updateSettingsInDatabase() {
			const isTelephoneActive = document.getElementById('telephone').checked;
			const isEmailActive = document.getElementById('email').checked;
			const isTchatActive = document.getElementById('tchat').checked;

			// Utilisez ici une librairie AJAX, comme Axios ou la fonction fetch
			// pour envoyer les données au contrôleur Symfony.
			// Voici un exemple d'utilisation de la fonction fetch :

			fetch('/api/bouton/update/settings', {
			method: 'POST',
			headers: {
				'Content-Type': 'application/json',
			},
			body: JSON.stringify({
				telephone: isTelephoneActive,
				email: isEmailActive,
				tchat: isTchatActive,
			}),
			})
			.then(response => response.json())
			.then(data => {
				// Le contrôleur Symfony renverra une réponse JSON avec { success: true } en cas de succès
				if (data.success) {
				console.log('Mise à jour réussie en base de données.');
				} else {
				console.error('Erreur lors de la mise à jour en base de données.');
				}
			})
			.catch(error => {
				console.error('Une erreur s\'est produite :', error);
			});
		}

		// Ajouter un gestionnaire d'événements à chaque case à cocher pour appeler la fonction d'envoi des données
		document.getElementById('telephone').addEventListener('change', updateSettingsInDatabase);
		document.getElementById('email').addEventListener('change', updateSettingsInDatabase);
		document.getElementById('tchat').addEventListener('change', updateSettingsInDatabase);
	</script>
{% endblock %}

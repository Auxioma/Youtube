{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1>Profile</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ profile.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ profile.Pseudo }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ profile.Nom }}</td>
            </tr>
            <tr>
                <th>DateDeNaissance</th>
                <td>{{ profile.DateDeNaissance ? profile.DateDeNaissance|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NumeroTelephone</th>
                <td>{{ profile.NumeroTelephone }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ profile.Adresse }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ profile.CodePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ profile.Ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ profile.Pays }}</td>
            </tr>
            <tr>
                <th>OptIn</th>
                <td>{{ profile.OptIn ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ profile.imageName }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ profile.CreatedAt ? profile.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ profile.UpdatedAt ? profile.UpdatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_profile_index') }}">back to list</a>

    <a href="{{ path('app_admin_profile_edit', {'id': profile.id}) }}">edit</a>

    {{ include('admin/profile/_delete_form.html.twig') }}
{% endblock %}

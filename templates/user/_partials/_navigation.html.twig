
<aside class="sidebar-area col-3">
    <div class="widget widget_categories">
        <div class="text-center">
            {% if app.user.profile.imageName is not null %}
            <img src="{{ asset('assets/img/profile/' ~ app.user.profile.imageName) }}" height="75" width="75" alt="image" class="img-fluid">
            {% else %}
            <i class="icoprofile fa-solid fa-{{app.user.profile.Pseudo|first}}"></i>
            {% endif %}
            <h3 class="widget_title">Bonjour, {{ app.user.profile.Pseudo }}</h3>
            {# j'affiche le solde du client qui est le dernierID de la table soldeCompteClients #}
            <p>Solde : {{ app.user.profile.soldeCompteClients.last.PrixRestant | format_currency('EUR', {rounding_mode: 'floor'}) }}  </p>
        </div>
    </div>

    <div class="widget widget_categories">
        <h3 class="widget_title">Navigation</h3>
        <ul>
            <li><a href="{{ path('user_profile_new') }}">Mon profile</a></li>
            <li><a href="{{ path('user_forfait') }}">Achat de minutes</a></li>
            <li><a href="{{ path('app_mes_paiements') }}">Mes paiement</a></li>
            <li class=""><a class="" role="button" id="dropdownMenuLink002" data-bs-toggle="dropdown" aria-expanded="false">Consultations Email</a>
                <ul class="dropdown-menu position-relative" aria-labelledby="dropdownMenuLink002">
                    <li><a href="{{ path('user_prix_consultation_par_email') }}">Consultation par Email</a></li>
                    <li><a href="{{ path('user_consultation_email_list') }}">Toutes les consultations par Email</a></li>
                </ul>
            </li>
            <li><a href="{{ path('tchat') }}">Consultation Chat</a></li>

            {#  si le role_admin alors connection au back office #}
            {% if is_granted('ROLE_ADMIN') %}
                <hr class="sidebar-divider">
                <li><a href="{{ path('app_dashboard') }}">Back Office</a></li>
            {% endif %}
        </ul>
    </div>
</aside>


{% extends 'base.html.twig' %}

{% block body %}
	<div class="breadcumb-wrapper " data-bg-src="assets/img/bg/breadcumb-bg.jpg" data-overlay="black" data-opacity="7">
		<div class="container">
			<div class="breadcumb-content text-center">
				<h1 class="breadcumb-title">Checkout</h1>
				<ul class="breadcumb-menu">
					<li>
						<a href="index.html">Home</a>
					</li>
					<li>Checkout</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="th-checkout-wrapper space-top space-extra-bottom">
		<div class="container">
			<div class="row">
				<div class="col-3">
					<nav>
						<ul>
							<li><a href="{{ path('user_profile') }}">Informations personnelles</a></li>
						</ul>
					</nav>
				</div>
				<div class="col-9">
					{{ form_start(form, { 'attr' : {'class': 'woocommerce-form-login'} }) }}
					<div class="row">
						<div class="col-6">
							<div class="woocommerce-form-login-toggle">
								<div class="woocommerce-info">Informations générales</div>
							</div>
							<div class="form-group">
								<label>Prénom ou pseudo</label>
								{{ form_widget(form.Pseudo) }}
							</div>
							<div class="form-group">
								<label>Nom</label>
								{{ form_widget(form.Nom) }}
							</div>
							<div class="form-group">
								<label>Date de naissance</label>
								{{ form_widget(form.DateDeNaissance) }}
							</div>
						</div>
						<div class="col-6">
							<div class="woocommerce-form-login-toggle">
								<div class="woocommerce-info">Informations complémentaires</div>
							</div>
							<div class="form-group">
								<label>Numéro de téléphone</label>
								{{ form_widget(form.NumeroTelephone) }}
							</div>
							<div class="form-group">
								<label>Adresse</label>
								{{ form_widget(form.Adresse) }}
							</div>
							<div class="row">
								<div class="col-4">
									<div class="form-group">
										<label>Code postal</label>
										{{ form_widget(form.CodePostal) }}
									</div>
								</div>
								<div class="col-8">
									<div class="form-group">
										<label>Ville</label>
										{{ form_widget(form.Ville) }}
									</div>
								</div>
							</div>
							<div class="form-group">
								<label>Pays</label>
								{{ form_widget(form.Pays) }}
							</div>
						</div>
						<div class="form-group">
							<div class="custom-checkbox">
								{{ form_widget(form.OptIn) }}
								<label for="profile_OptIn">Recevoir les offres exclusives</label>
							</div>
						</div>
						<div class="form-group">
							<button type="submit" class="th-btn">Enregistez vous</button>
						</div>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent
{% endblock %}

{% block body %}
	<div class="breadcumb-wrapper" data-bg-src="assets/img/bg/breadcumb-bg.jpg" data-overlay="black" data-opacity="7">
		<div class="container">
			<div class="breadcumb-content text-center">
				<h1 class="breadcumb-title">Reset your password</h1>
				<ul class="breadcumb-menu">
					<li>
						<a href="index.html">Accueil</a>
					</li>
					<li>Reset your password</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="th-checkout-wrapper space-top space-extra-bottom">
		<div class="container">
			<div class="row">
				<div class="col-6 mx-auto">
					<div class="woocommerce-form-login-toggle">
						<div class="woocommerce-info">Reset your password</div>
					</div>
					<div class="woocommerce-form-login">
						<p>
							If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.
							        This link will expire in
							{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
						</p>
						<p>If you don't receive an email please check your spam folder or
							<a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

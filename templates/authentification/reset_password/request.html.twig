{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
	<div class="breadcumb-wrapper " data-bg-src="assets/img/bg/breadcumb-bg.jpg" data-overlay="black" data-opacity="7">
		<div class="container">
			<div class="breadcumb-content text-center">
				<h1 class="breadcumb-title">Checkout</h1>
				<ul class="breadcumb-menu">
					<li>
						<a href="index.html">Home</a>
					</li>
					<li>Checkout</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="th-checkout-wrapper space-top space-extra-bottom">
		<div class="container">
			<div class="row">
                <div class="col-6 mx-auto">
					<div class="woocommerce-form-login-toggle">
						<div class="woocommerce-info">Reset your password</div>
					</div>
                    {{ form_start(requestForm, {'attr': {'class': 'woocommerce-form-login'} }) }}
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}
						<div class="form-group">
							<label>Votre Email : </label>
							{{ form_widget(requestForm.email) }}
                            {{ form_errors(requestForm.email) }}
						</div>
						<div class="form-group">
							<button type="submit" class="th-btn">Reset votre mot de passe</button>
						</div>
					 {{ form_end(requestForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}

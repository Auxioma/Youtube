                            </div>
                            <div class="service-box_content">
                                <div class="service-default-icon">
                                    <img src="{{ asset('assets/img/horoscope/svg/' ~ horoscope ~ '.svg') }}" height="50" width="50" alt="Icon">
                                </div>
                                <h3 class="box-title"><a href="{{ path('app_horoscope', {'slug': horoscope}) }}">{{ horoscope }}</a></h3>
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </section>

